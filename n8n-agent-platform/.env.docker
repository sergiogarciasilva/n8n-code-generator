# n8n Agent Platform - Docker Environment Configuration
# This file contains environment variables specific to Docker deployment

# Database Configuration (PostgreSQL)
DATABASE_HOST=n8n-agent-postgres
DATABASE_PORT=5432
DATABASE_NAME=n8n_agent_platform_db
DATABASE_USER=n8n_agent_user
DATABASE_PASSWORD=n8n_agent_secure_password_2024
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration
REDIS_HOST=n8n-agent-redis
REDIS_PORT=6379
REDIS_PASSWORD=n8n_agent_redis_password_2024
REDIS_DB=0
REDIS_KEY_PREFIX=n8n_agent:

# n8n Instance Configuration
N8N_HOST=n8n-instance
N8N_PORT=5678
N8N_API_KEY=n8n_agent_api_key_2024
N8N_WEBHOOK_URL=http://n8n-instance:5678/webhook

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=3456
API_BASE_URL=http://localhost:3456

# Web Dashboard Configuration
WEB_HOST=0.0.0.0
WEB_PORT=5173
WEB_BASE_URL=http://localhost:5173

# Security Configuration
JWT_SECRET=n8n_agent_jwt_secret_key_2024_super_secure
ENCRYPTION_KEY=n8n_agent_encryption_key_32_chars_2024
SESSION_SECRET=n8n_agent_session_secret_2024

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TO_FILE=true
LOG_FILE_PATH=/var/log/n8n-agent-platform/app.log

# Feature Flags
ENABLE_MULTI_TENANCY=true
ENABLE_ANALYTICS=true
ENABLE_MARKETPLACE=true
ENABLE_AI_FEATURES=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:5679

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@n8nagentplatform.local

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECK=true

# Node Environment
NODE_ENV=development